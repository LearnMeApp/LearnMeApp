<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0d243c"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">


    <Button
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="My Collection"
        android:id="@+id/mycollection"
        android:layout_marginTop="37dp"
        android:background="@drawable/red_button"
        android:layout_marginLeft="44dp"
        android:layout_marginStart="44dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Submit Fact"
        android:id="@+id/submitfact"
        android:background="@drawable/green_button"
        android:layout_marginBottom="53dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/mycollection"
        android:layout_alignStart="@+id/mycollection" />

    <Button
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Random Fact"
        android:id="@+id/randomfact"
        android:background="@drawable/yellow_button"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"
        android:layout_alignTop="@+id/mycollection"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_weight="1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Verify Facts"
        android:id="@+id/verifyfacts"
        android:background="@drawable/orange_button"
        android:layout_alignTop="@+id/submitfact"
        android:layout_alignLeft="@+id/randomfact"
        android:layout_alignStart="@+id/randomfact" />
</RelativeLayout><!-- From: file:/Users/evaN/Desktop/LearnMeAppGit/LearnMeApp/app/src/main/res/layout-land/activity_main.xml -->